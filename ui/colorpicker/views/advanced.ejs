<div class="advanced-color">

	<div class="gradient"></div>
	<div class="spectrum"></div>
	<div class="alpha"></div>

	<article>
		<div class="controls">
			<form>
				<label>
					<span>R</span>
					<input type="number" min="0" max="255" name="r" required="" autofocus="" />
				</label>

				<label>
					<span>G</span>
					<input type="number" min="0" max="255" name="g" required="" />
				</label>

				<label>
					<span>B</span>
					<input type="number" min="0" max="255" name="b" required="" />
				</label>

				<label>
					<span>A</span>
					<input type="number" min="0" max="100" step="1" name="a" />
				</label>

				<label>
					<span>Hex</span>
					<input type="text" name="hex">
				</label>

				<div class="preview">
					<div class="inner"></div>
					<div class="original"></div>
				</div>

				<footer>
					<button data-type="cancel">Cancel</button>
					<button data-type="save" class="right">Ok</button>
				</footer>
			</form>
		</div>
	</article>

</div>